/* pages/home/home.wxss */
.content-view {
  width: 100%;
  height: 100%;
  background: #fbf8d4;
}

.bg-view {
  position: relative;
  width: 100%;
  height: 100%;
}

.bg-top {
  width: 244rpx;
  height: 190rpx;
  position: absolute;
  top: 0;
  right: 0;
}

.bg-bottom {
  width: 750rpx;
  height: 251rpx;
  position: absolute;
  left: 0;
  bottom: 0
}

.result-view {
  width: 100%;
  height: 100%;
  z-index: 100;
  position: absolute;
  left: 0;
  top:0;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
}

.result-image {
  width: 561rpx;
  height: 960rpx;
  background-color: #f5f5f5;
  border: #5f3919 solid 12px;
  border-radius: 10px;
}

.input-view text {
  font-size: 20pt;
  width: 100%;
  text-align: center;
}

.input-name {
  width: 76%;
  height: 88rpx;
  background: #ffe5e5;
  text-align: center;
  color: #333;
  margin-top: 40rpx;
}

.input-pl {
  color: #d38484;
}

.radio-group {
  width: 90%;
  text-align: center;
  margin-top: 34rpx;
}
.radio-right {
  margin-left: 40rpx;
}

.create-btn {
  width: 76%;
  font-size: 14pt;
  text-align: center;
  background: #e9423f;
  border: 3px #e9423f;
  color: white;
  overflow: hidden;
  height: 80rpx;
  line-height: 80rpx;
  margin-top: 56rpx;
}

.create-hover {
  background-color: #d32323;
}

.btn-view {
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.share-btn {
  width: 280rpx;
  font-size: 14pt;
  text-align: center;
  background: #e73e3b;
  border: 3px #e73e3b;
  border-radius:12px; 
  color: white;
  overflow: hidden;
  height: 80rpx;
  line-height: 80rpx;
  margin-top: 26rpx;
  box-shadow: 1px 1px 1px #e46053;
}

.save-btn {
  width: 280rpx;
  font-size: 14pt;
  text-align: center;
  background: #279e50;
  border: 3px #279e50;
  border-radius:12px; 
  color: white;
  overflow: hidden;
  height: 80rpx;
  line-height: 80rpx;
  margin-top: 26rpx;
  margin-left: 60rpx;
  box-shadow: 1px 1px 1px #1c984d;
}



.show_tip {  
  width: 100%;  
  height: 100%;  
  position: fixed;  
  top: 0;  
  left: 0;  
  z-index: 1000;
  overflow: hidden;
  justify-content: flex-start;
  display: flex;
  flex-direction: column;
  
}
.show-content{
  display: flex;
  justify-content: center;
}
.show-content-end{
  display: flex;
  justify-content: flex-end;
}
.touch-image{
  width: 106rpx;
  height: 133rpx;
  margin-top: 60%;
}
.hint-text{
  width: 398rpx;
  height: 113rpx;
  margin-top: 15%;
}
.hint-config{
  width: 260rpx;
  height: 100rpx;
  margin-top: 5%;
}